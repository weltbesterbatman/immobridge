{
    "name": "weltbesterbatman/immobridge",
    "description": "Modern WordPress plugin for OpenImmo real estate data integration with Bricks Builder support",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Martin Rauer",
            "email": "martin@example.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "psr/container": "^2.0",
        "psr/log": "^3.0",
        "monolog/monolog": "^3.0",
        "symfony/dependency-injection": "^7.0",
        "symfony/config": "^7.0",
        "symfony/yaml": "^7.0",
        "league/container": "^4.2",
        "nesbot/carbon": "^3.0",
        "ramsey/uuid": "^4.7",
        "respect/validation": "^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.8",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "ImmoBridge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ImmoBridge\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src --level=8",
        "phpcs": "phpcs src --standard=WordPress",
        "phpcbf": "phpcbf src --standard=WordPress",
        "post-install-cmd": [
            "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs"
        ],
        "post-update-cmd": [
            "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
